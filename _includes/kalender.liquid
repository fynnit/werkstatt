---
layout: base.liquid
---

<header style="
        {% if header.image %} background-image: url({{header.image}}); {% endif %}
        {% if header.color  %} background-color: {{header.color}};{% endif %}
        ">
    <h1 class="page-title">{{title}}</h1>
    {% if subtitle %}<span class="page-subtitle">{{subtitle}}</span>{% endif %}
    {% if header.copyright %}<span class="copyright">{{header.copyright}}</span>{% endif %}
</header>

<main class="calendar">

    <div class="switch">
        <div class="switch-item forschungsraum" onclick="toggleGrid(this);">forschungsraum</div>
        <div class="switch-item next-level" onclick="toggleGrid(this);">next-level</div>
        <div class="switch-item freisinn" onclick="toggleGrid(this);">freisinn</div>
        <div class="switch-item coaching" onclick="toggleGrid(this);">coaching</div>
        <div class="switch-item projekte-workshops" onclick="toggleGrid(this);">projekte workshops</div>
    </div>
    <div class="grid">
        {%- for post in collections.calendar -%}
        <a class="item {{post.data.category}}" href="{{post.url}}">
            <span class="title">{{ post.data.title }}</span>
            {% if post.data.trainer %}
                <span class="trainer">{{ post.data.trainer }}</span>
            {% endif %}
            
            <span class="location">{{ post.data.location_ort }}</span>
            
            <span class="dates"><span class="date">{{ post.data.date | dateformat }}</span> - <span
                    class="end_date">{{ post.data.end_date | dateformat }}</span></span>
            <div class="more">
                <span class="time">{{ post.data.time }}</span>
                <span class="price">{{ post.data.price }}</span>
            </div>
        </a>
        {%- endfor -%}
    </div>
<script>
    function toggleGrid(el) {
        const grid = document.querySelector('.grid');
        el.classList.toggle('active');
        let elClass = el.classList[1];
        grid.classList.toggle(elClass);
    }
</script>
</main>

