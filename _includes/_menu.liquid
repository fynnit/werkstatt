<div class="button-wrapper" onclick="toggleMenu()">
    <span class="button button-top"></span>
    <span class="button button-bottom"></span>
</div>
<nav>

    <div class="nav-container">
        <div class="mainpages">
            {% for item in collections.page %}
                {% if item.url == '/' %}
                    <a href="{{item.url}}" class="large-type" {% if page.url == item.url %} aria-current="page"{% endif %}>{{ item.data.title | fw }}</a>
                {% else %}
                    <a href="{{item.url}}" {% if page.url == item.url %} aria-current="page" class="active"{% endif %}>{{ item.data.title }}</a>
                {% endif %}
            {% endfor %}
        </div>

        <div class="secondarypages">
        
        </div>
    </div>
</nav>
<script>
    function toggleMenu() {
        const menu = document.querySelector('nav');
        const button = document.querySelector('.button-wrapper');
        menu.classList.toggle('active');
        button.classList.toggle('active');
    }
</script>