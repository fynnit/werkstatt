---
layout: base.liquid
---

<header style="background-image: url({{header.image}});">

    <div class="header-content">
        <h1 class="page-title">{{header.title}}</h1>
        <h5 class="page-subtitle">{{header.subtitle}}</h5>
    </div>

    {% include _iwant.liquid %}

    <span class="copyright">{{header.copyright | markdownify}}</span>

</header>
<section class="text-block">
    <h3>{{text_block.headline}}</h3>
    <p class="copytext">{{text_block.copytext}}</p>
</section>

<section class="teasers">
    {% for item in teaser %}
        <div class="teaser {{item.link.url}}">
            <h5 class="headline">{{item.headline}}</h5>
            <p class="description">{{item.description}}</p>
            {%if item.icon.url %}
                <img class="teaser-icon" src="{{item.icon.url}}" alt="{{item.icon.name}}">
            {% endif %}
            <a href="/{{item.link.url}}">{{item.link.text}}</a>
        </div>
    {% endfor %}
</section>

{% include _teamslider.liquid %}


