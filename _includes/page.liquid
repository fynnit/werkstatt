---

layout: base.liquid
---

<header class="page {{title | slug }}" 
    style="
    {% if header.image %} background-image: url({{header.image}}); {% endif %}
    {% if header.color  %} background-color: {{header.color}};{% endif %}
    "
    >
    
    <h1 class="page-title">{{title}}</h1>
    {% if subtitle %}<span class="page-subtitle">{{subtitle}}</span>{% endif %}
    {% if header.copyright %}<span class="copyright">{{header.copyright}}</span>{% endif %}

</header>

<main class="page {{title | slug }}">

    {% for block in sections %}
        {% assign template = block.template %}
        {% case template %}
            {% when 'quote' %}
                {% include _quote.liquid %}
            
            {% when 'text_image_block' %}
                {% include _text_image_block.liquid %}
            
            {% when 'text_block' %}
                {% include _text_block.liquid %}

            {% when 'tabs' %}
                {% include _tabs.liquid %}

            {% when 'image' %}
                {% include _single_image.liquid %}
            
            {% when 'form' %}
                {% include _form.liquid %}

        {% endcase %}
    {% endfor %}
    
    {% assign itemType = title | slug %} 
    {% comment %} itemType works {% endcomment %}
    '
    {% if itemType != 'coaching' and itemType != 'impressum' %}

    <section class="kalender">
    <h3>NÃ¤chste Termine</h3>
        <div class="grid">               
            {%- for post in collections.calendar -%}
                {% if post.data.category == itemType %}
                    {% include _cal_grid_item.liquid %}
                {% endif %}
            {%- endfor -%}
        </div>
    </section>
    {% endif %}

</main>