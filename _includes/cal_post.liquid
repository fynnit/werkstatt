---
layout: base.liquid
class: calendar-post
form:
  title: Kontakt
  id: 
  placeholder:
    name: Ihr Name
    email: Ihre E-Mail Addresse für unsere Antwort
    textarea: Wollen wir loslegen?
    send: los!
---

<header class="{{category}}">

    <h1 class="title">{{ title }}</h1>
    <span class="page-subtitle">
        <span>{{ location_ort }}</span>
        <div class="dates">
            <span class="date">
            {% if start_date != ending_date %}
            {{ date | fulldateformat }}</span> - <span class="end_date">{{ end_date | fulldateformat }}
                {% else%}
                {{date | fulldateformat }}
                {% endif%}
            </span>
        </div>
    </span>
</header>

<main class="calendar-post">
<section class="post-description">
    {% if description %}
    <div class="description">{{ description }}</div>
    {% endif %}
<br><br>
    {% if trainer %}
    <div class="trainer">mit: {{ trainer }}</div>
    {% endif %}


    <div class="time">Start um {{ date | starttime }} Uhr</div>
    <div class="price">Kosten: {{ price }}{% if price == '' %} auf Anfrage {% endif %}</div>
    
</section>
    <section class="form-section">
    <h3>{{form.title | mdfy }}</h3>
    <form name="contact {{title}} {{start-date | dateformat }}" method="POST" data-netlify="true" netlify-honeypot="bot-field">
        <div class="part-one">
            <input type="text" name="name" id="name" placeholder="{{form.placeholder.name }}">
            <input type="email" name="email" id="email" placeholder="{{form.placeholder.email }}">
        </div>
            <div class="part-two">
            <textarea name="message" id="message" placeholder="{{form.placeholder.textarea }}"></textarea>
            <label class="hidden"> Don’t fill this out if you’re human: <input name="bot-field" /></label>
            <input type="submit" class="submit" value="{{form.placeholder.send }}">
        </div>
    </form>

</section>
</main>